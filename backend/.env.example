# Etsy Bulk Uploader - Environment Variables
# Copy this file to .env and fill in your values

# Flask
SECRET_KEY=your-secret-key-change-this
JWT_SECRET_KEY=your-jwt-secret-change-this
FLASK_ENV=development

# Database (PostgreSQL for production, SQLite for development)
DATABASE_URL=sqlite:///etsy_uploader.db
# DATABASE_URL=postgresql://user:password@localhost:5432/etsy_uploader

# Groq API (for AI content generation)
GROQ_API_KEY=your-groq-api-key

# Etsy API (from https://www.etsy.com/developers)
ETSY_API_KEY=your-etsy-api-key
ETSY_SHARED_SECRET=your-etsy-shared-secret
ETSY_REDIRECT_URI=http://localhost:5000/api/etsy/callback

# Token encryption (generate with: python -c "from cryptography.fernet import Fernet; print(Fernet.generate_key().decode())")
FERNET_KEY=your-fernet-key-for-token-encryption
